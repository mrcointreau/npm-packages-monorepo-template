{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "@mrcointreau/*": [
        "packages/*/src"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@types/jest",
      "@types/node"
    ],
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
